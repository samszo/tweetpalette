<!-- le premier  rectangle -->

 <g transform="translate(100,100)">
     <a xlink:href="ok.xml">
         <rect stroke-width="2" stroke="navy" fill="azure" width="80"
             height="50" y="80" x="170"
             id="hint_buttonok">
	         <animateColor fill="freeze" dur="0.1s" to="aqua" from="azure"
             attributeName="fill" begin="mouseover"/>
             <animateColor fill="freeze" dur="0.1s" to="azure" from="aqua"
             attributeName="fill" begin="mouseout"/>
         </rect>
     </a>
     <text style="font-size:12;" alignment-baseline="middle"  y="110" x="195" >OK</text>
 </g>
 
 <!-- le commentaire pour OK -->
<g transform="translate(170,140)" style="display:none">

  <ellipse stroke-width="1" stroke="black" fill="none" ry="0.8cm" rx="3cm"/>
    <text style="font-size:12;" alignment-baseline="middle" x="-2.9cm" y="0.15cm">
    Je suis tout à fait d'accord
	avec vous</text>

    <animate fill="freeze" dur="0.1s" begin="hint_buttonok.mouseover"

      from="none" to="block" attributeName="display"/>

    <animate fill="freeze" dur="0.1s" begin="hint_buttonok.mouseout"

      from="block" to="none" attributeName="display"/>
</g>
